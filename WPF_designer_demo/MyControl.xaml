<UserControl x:Class="WPF_designer_demo.MyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_designer_demo"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="I am a TextBlock" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="I am a Button" Grid.Row="1" Margin="10,20" Click="Button_Click"/>
        <Canvas Height="100">
            <Rectangle Width="20" Height="20" Fill="Red" Canvas.Left="0"/>
            <Rectangle Width="20" Height="20" Fill="Blue" Canvas.Left="10" Canvas.Top="10"/>
        </Canvas>
    </Grid>
</UserControl>
